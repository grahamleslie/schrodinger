<p id="notice"><%= notice %></p>

<h1>Pipelines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Runs</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pipelines.each do |pipeline| %>
      <tr>
        <td><%= pipeline.name %></td>
        <td><%= pipeline.runs.count %></td>
        <td><%= link_to 'Show', pipeline %></td>
        <td><%= link_to 'Edit', edit_pipeline_path(pipeline) %></td>
        <td><%= link_to 'Destroy', pipeline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Run', run_pipeline_path(pipeline) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Pipeline', new_pipeline_path %>
