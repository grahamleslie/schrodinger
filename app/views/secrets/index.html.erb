<p id="notice"><%= notice %></p>

<h1>Secrets</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Domain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secrets.each do |secret| %>
      <tr>
        <td><code><%= secret.name %></code></td>
        <td><%= secret.hidden_value %></td>
        <td><code><%= secret.domain %></code></td>
        <td><%= link_to 'Edit', edit_secret_path(secret) %></td>
        <td><%= link_to 'Destroy', secret, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
  <%= link_to 'New Secret', new_secret_path, class: 'link-button' %>
</p>
<%= link_to 'Back to Pipelines', pipelines_path %>

